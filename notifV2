blueprint:
  name: Notification simple
  description: Envoie une notification avec un titre et un message.
  domain: automation

  input:
    trigger:
      name: Déclencheur
      description: L'événement qui déclenche la notification.
      required: true
      selector: trigger

    title:
      name: Titre
      description: Le titre de la notification.
      selector: text

    message:
      name: Message
      description: Le contenu du message.
      required: true
      selector: text

    target:
      name: Service de notification
      description: Le service de notification à utiliser (ex: notify.mobile_app_mon_telephone).
      required: true
      selector: target
