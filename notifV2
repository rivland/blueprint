blueprint:
  name: "Notification basique (trigger automation)"
  description: "Envoie une notification lorsque l'automatisation est déclenchée via un 'automation_trigger'."
  domain: automation
  input:
    message:
      name: "Message de notification"
      description: "Le message à envoyer dans la notification."
      selector:
        text: {}
    titre:
      name: "Titre de la notification"
      description: "Le titre de la notification."
      selector:
        text: {}
    service_notification:
      name: "Service de notification"
      description: "Entrez le service de notification à utiliser (ex: notify.mobile_app_mon_telephone)."
      selector:
        text: {}
      default: "notify.notify"

trigger:
  - platform: event
    event_type: automation_trigger

action:
  - service: !input service_notification
    data:
      message: !input message
      title: !input titre
