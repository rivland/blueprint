blueprint:
  name: "Notification simple"
  description: "Ce blueprint envoie une notification avec un titre et un message lorsqu'un déclencheur est activé."
  domain: automation
  input:
    # Sélecteur pour choisir l'entité de déclenchement
    déclencheur:
      name: "Déclencheur"
      description: "Entité qui déclenche la notification."
      selector:
        entity: {}
    titre:
      name: "Titre de la notification"
      description: "Le titre de la notification."
      selector:
        text: {}
    message:
      name: "Message de notification"
      description: "Le message à envoyer dans la notification."
      selector:
        text: {}
    service_notification:
      name: "Service de notification"
      description: "Service de notification où envoyer le message."
      selector:
        text: {}
      default: "notify.notify"

trigger:
  platform: state
  entity_id: !input déclencheur

action:
  - service: !input service_notification
    data:
      title: !input titre
      message: !input message
